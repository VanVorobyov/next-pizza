datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum pizzaType {
  USER
  ADMIN
}

enum OrderStatus {
  PENDING
  SUCCEEDED
  CANCELED
}

model User {
  id        Int      @id @default(autoincrement())
  fullName  String?
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  cart      Cart?
  orders    Order[]
}

model Category {
  id       Int       @id @default(autoincrement())
  name     String    @unique
  products Product[]
}

// Товар
model Product {
  id          Int           @id @default(autoincrement())
  name        String
  imageURL    String
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  category    Category      @relation(fields: [categoryId], references: [id])
  categoryId  Int
  ingredients Ingredient[]
  items       ProductItem[]
}

// Варианты товары
model ProductItem {
  id        Int        @id @default(autoincrement())
  price     Int
  size      Int?
  pizzaType Int
  product   Product    @relation(fields: [productId], references: [id])
  productId Int
  cartItems CartItem[]
}

model Ingredient {
  id         Int        @id @default(autoincrement())
  name       String
  price      Int
  imageURL   String
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  products   Product[]
  cartItems  CartItem[]
  cartItemId Int?
}

model Cart {
  id          Int        @id @default(autoincrement())
  // для корзины авторизованных пользователей
  user        User?      @relation(fields: [userId], references: [id])
  userId      Int?       @unique
  // для корзины неавторизованных пользователей добавляем token
  token       String?
  totalAmount Int        @default(0)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  items       CartItem[]
}

model CartItem {
  id            Int          @id @default(autoincrement())
  cart          Cart         @relation(fields: [cartId], references: [id])
  cartId        Int
  productItem   ProductItem  @relation(fields: [productItemId], references: [id])
  productItemId Int
  ingredients   Ingredient[]
  quantity      Int          @default(1)
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
}

model Order {
  id          Int         @id @default(autoincrement())
  user        User?       @relation(fields: [userId], references: [id])
  userId      Int?        @unique
  token       String?
  totalAmount Int
  status      OrderStatus
  paymentId   String?
  items       Json
  // для оформления заказа на любое имя адрес и емейл
  fullName    String
  email       String
  phone       String
  address     String
  comment     String?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}
